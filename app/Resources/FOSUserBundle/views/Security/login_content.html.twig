{% trans_default_domain 'FOSUserBundle' %}


<div id="login">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">
            <div class="col s2 offset-s5">
                <div class="row">
                    <img class="responsive-img" src="{{ asset('bundles/main/images/armaLogo.png') }}" alt="armaLogo">
                    <div class="col s12 center">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="col s12 center">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" />
                    </div>

                    <div class="col s12 center">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col s12 center">
                        <input class="btn center btnConnect" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                    <div class="col s12 center errorMsg">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="col s12 center" style="margin-top: 0px">
        <a href="{{ path('fos_user_registration_register') }}"><button class="btn">Inscription</button></a>
    </div>
</div>
